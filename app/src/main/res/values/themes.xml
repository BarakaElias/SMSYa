<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmsYa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ice_field</item>
        <item name="colorPrimaryVariant">@color/ice_field_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ice_field_variant</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:textColorHighlight">@color/colorEditTextLight</item>-->
<!--        <item name="android:textColorLink">@color/colorPrimary</item>-->
    </style>

    <style name="Theme.SmsYa.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SmsYa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SmsYa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>